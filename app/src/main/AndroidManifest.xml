<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meetme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_circle_blue"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_circle_blue"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeetMe"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.CallActivity"></activity>
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.GroupChatActivity" />
        <activity
            android:name=".Activities.ChatActivity"
            android:theme="@style/Theme.MeetMe.NoActionBar" />
        <activity android:name=".Activities.SetupProfileActivity" />
        <activity
            android:name=".Activities.OTPActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.PhoneNumberActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>